<%-include('partials/header.ejs')%> <%-include('partials/homenavbar.ejs')%>
<link
  href="https://fonts.googleapis.com/css2?family=Archivo:wght@600;700&family=Poppins&display=swap"
  rel="stylesheet"
/>
<style>
  body {
    font-family: "Poppins", sans-serif;
    font-size: 14px;
  }

  body h1 {
    font-family: "Archivo", sans-serif;
  }

  .rows a {
    float: right;
    color: #98c1d9;
  }
</style>

<body>
  <div class="container">
    <hr />
    <div class="jumbotron">
      <h1 class="display-4">Bem Vindo</h1>
      <p class="lead">Esse é um simples blog para postagem de artigos.</p>
      <hr class="my-4" />
      <p>descrição detalhada aqui.</p>
      <a
        class="btn btn-lg btn-primary"
        href="#"
        role="button"
        style="background-color: #ee6c4d"
        >Leia mais</a
      >
    </div>
    <hr />
    <% articles.forEach(article => { %>
    <div class="card">
      <div class="card-header">
        <h2><%=article.title%></h2>
      </div>
      <div class="card-body">
        <a
          href="/<%= article.slug %>"
          class="btn btn-dark"
          style="background-color: #98c1d9"
          >Ler artigo</a
        >
      </div>
    </div>
    <% }) %>

    <div class="rows">
      <hr />
      <div class="col col-12">
        <a href="/articles/page/2"> next>>> </a>
      </div>
      <hr />
    </div>
  </div>
  <br />
</body>
<%-include('partials/footer.ejs')%>
